[core]
    editor = 'C:/Program Files/Notepad++/notepad++.exe' -multiInst -notabbar -nosession -noPlugin
    whitespace = -trailing-space
[credential]
    helper = manager
[diff]
    tool = p4merge
[difftool "p4merge"]
    path = C:\\Program Files\\Perforce\\p4merge.exe
[difftool]
    prompt = false

[merge]
    tool = p4merge
    ff = only # avoid merge commits
[mergetool "p4merge"]
    path = C:\\Program Files\\Perforce\\p4merge.exe
[mergetool]
    prompt = false
[user]
    name = Your Name
    email = your@email.com
[pull]
    rebase = true
    # rebase = merges # preserves local branch structure such as merges
